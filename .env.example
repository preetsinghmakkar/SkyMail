# ======================== SERVER CONFIGURATION ========================
ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ======================== DATABASE CONFIGURATION ========================
DB_HOST=localhost
DB_USER=skymail_user
DB_PASSWORD=skymail_pass
DB_NAME=skymail_db
DB_PORT=5432

# ======================== REDIS CONFIGURATION ========================
REDIS_URL=redis://localhost:6379/0

# ======================== SECRET KEYS (CHANGE IN PRODUCTION) ========================
ACCESS_TOKEN_SECRET_KEY=your_super_secret_access_token_key_change_in_production
EMAIL_CONFIRMATION_SECRET_KEY=your_super_secret_email_confirmation_key_change_in_production
PASSWORD_RESET_SECRET_KEY=your_super_secret_password_reset_key_change_in_production

# ======================== MAIL SERVER CONFIGURATION ========================
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@skymail.com
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587

# ======================== GOOGLE OAUTH CONFIGURATION ========================
GOOGLE_OAUTH_SESSION_KEY=generate_random_string_for_session_key
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_SECRET_KEY=your_google_oauth_secret_key

# ======================== TOKEN EXPIRATION CONFIGURATION ========================
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_TOKEN_EXPIRE_MINUTES=15
CONFIRMATION_ACCOUNT_TOKEN_EXPIRE_MINUTES=2

# ======================== RATE LIMITING CONFIGURATION ========================
LOGIN_RATE_LIMIT_PERIOD=60
PASSWORD_RATE_LIMIT_PERIOD=300

# ======================== RAZORPAY CONFIGURATION ========================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_SECRET_KEY=your_razorpay_secret_key

# ======================== AWS S3 CONFIGURATION ========================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_S3_REGION=us-east-1
